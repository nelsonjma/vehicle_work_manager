<%= form_for(@work_task, remote: true) do |f| %>
    <% if @work_task.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@work_task.errors.count, 'error') %>:</h2>

          <ul>
            <% @work_task.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <% if work_id != nil %>
        <%= f.hidden_field :work_id, value: work_id %>
    <% else %>
        <%= f.hidden_field :work_id %>
    <% end %>

    <div class="field">
      <%= f.label 'Tarefa:' %><br>
      <%= f.select(:task_id, available_tasks, :prompt => 'Selecionar') %>
    </div>

    <div class="field">
      <%= f.label 'UT:' %><br>
      <%= f.text_field :ut %>
    </div>

    <%= f.submit %>
<% end %>