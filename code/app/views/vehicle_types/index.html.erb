<h1>Tipos de Veiculos</h1>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicle_types.each do |vehicle_type| %>
      <tr>
        <td><%= image_tag vehicle_type.image %></td>
        <td><%= vehicle_type.name %></td>

        <td><%= link_to 'Edit', edit_vehicle_type_path(vehicle_type) %></td>
        <td><%= link_to 'Destroy', vehicle_type, method: :delete, data: { confirm: 'Tem a certeza?' }, remote: true, class: :delete_post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

