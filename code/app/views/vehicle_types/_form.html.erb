<%= form_for(@vehicle_type) do |f| %>
  <% if @vehicle_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vehicle_type.errors.count, 'error') %>:</h2>

      <ul>
      <% @vehicle_type.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'nome:' %> <br/>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label 'imagem' %>
    <%= f.file_field :upload %>
  </div>

  <br/>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
