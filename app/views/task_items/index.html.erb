<%= hidden_field_tag :table_row_position %>

<div class="container">

  <div class="row">
    <%= link_to 'Back', work_tasks_path(params: { work_id: params[:work_id], vehicle_id: params[:vehicle_id] }), class: 'btn btn-primary' %>
    <%= link_to 'Adicionar item do stock', new_task_item_path(params: { work_task_id: @work_task_id }), remote: true, class: 'btn btn-primary' %>
  </div>

  <div class="row">
    <table class="table table-condensed">
      <thead>
      <tr>
        <th>Codigo</th>
        <th>Qtd</th>
        <th>Descrição</th>
        <th>Responsável</th>
        <th>Observações</th>
        <th colspan="2"></th>
      </tr>
      </thead>

      <tbody id="task_item_tbody">
      <% @task_items.each do |task_item| %>
          <tr>
            <td><%= task_item.code %></td>
            <td><%= task_item.qtd %></td>
            <td><%= task_item.item_name %></td>
            <td><%= task_item.user_name %></td>
            <td><%= task_item.note %></td>

            <td><%= link_to 'Editar', edit_task_item_path(task_item, params: { search: task_item.stock_item_id }), remote: true, class: 'update_post btn btn-warning' %></td>
            <td><%= link_to 'Eliminar', task_item_path(task_item), method: :delete, data: { confirm: 'Tem a certeza?' }, remote: true, class: 'delete_post btn btn-danger' %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>

</div>

