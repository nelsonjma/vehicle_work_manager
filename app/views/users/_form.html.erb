<%= form_for(@user, remote: true, :html => { class: 'form-horizontal', role: 'form' }) do |f| %>

    <div class="form-group">
      <%= f.label 'Nome:', class: 'control-label col-sm-2' %>
      <div class="col-sm-4">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'Pin:', class: 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= f.text_field :pin, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'PermissÃµes:', class: 'control-label col-sm-2' %>
      <div class="col-sm-4">
        <%= f.select(:permission, users_permissions_list, {:prompt => 'Selecionar'}, { :class => 'form-control'}) %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'Utilizador activo?:', class: 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <% if is_new_user %>
            <%= f.check_box :active, class: 'form-control', :checked => true %>
        <% else %>
            <%= f.check_box :active, class: 'form-control' %>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Guardar', class: 'btn btn-default add_edit_form_submit' %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
      </div>
    </div>

<% end %>
