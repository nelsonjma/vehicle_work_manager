<%= form_for(@vehicle_type, :html => { class: 'form-horizontal', role: 'form' }) do |f| %>

    <div class="form-group">
      <%= f.label 'Nome:', class: 'control-label col-sm-2' %>
      <div class="col-sm-6">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'Imagem:', class: 'control-label col-sm-2' %>
      <div class="col-sm-4">
        <%= f.file_field :upload, class: 'btn btn-default' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Guardar', class: 'btn btn-default'  %>
        <%= link_to 'Back', vehicle_types_path, data: { dismiss: 'modal' }, class: 'btn btn-default' %>
      </div>
    </div>

<% end %>