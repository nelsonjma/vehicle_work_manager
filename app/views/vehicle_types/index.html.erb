<div class="container">

  <div class="row">
    <%= link_to 'Novo Tipo de Veiculo', new_vehicle_type_path, class: 'btn btn-primary' %>
  </div>

  <div class="row">
    <table class="table table-condensed">
      <thead>
      <tr>
        <th>Imagem</th>
        <th>Nome</th>
        <th colspan="2"></th>
      </tr>
      </thead>

      <tbody>
      <% @vehicle_types.each do |vehicle_type| %>
          <tr>
            <td><%= image_tag vehicle_type.image %></td>
            <td><%= vehicle_type.name %></td>

            <td><%= link_to 'Editar', edit_vehicle_type_path(vehicle_type), class: 'update_post btn btn-warning' %></td>
            <td><%= link_to 'Eliminar', vehicle_type, method: :delete, data: { confirm: 'Tem a certeza?' }, remote: true, class: 'delete_post btn btn-danger' %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>

</div>