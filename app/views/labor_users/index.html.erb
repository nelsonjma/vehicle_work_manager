<div class="container">

  <h4>Gerir Mão de Obra</h4>
  <br/>

  <h4>
    Veiculo
    <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
    Obras
    <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
    Tarefas
    <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
    <b>Mão de Obra</b>
  </h4>

  <br/>

  <div class="row">
    <%= link_to 'Back', work_tasks_path(params: { work_id: params[:work_id], vehicle_id: params[:vehicle_id], origin: params[:origin] }), class: 'btn btn-primary' %>
  </div>

  <div class="row">
    <table class="table table-condensed">
      <thead>
      <tr>
        <th>Utilizador</th>
        <th>Ut</th>

        <th></th>
      </tr>
      </thead>

      <tbody id="labor_user_tbody">
      <% ut_count = 0 %>

      <% @labor_users.each do |labor_user| %>
        <% ut_count += labor_user.ut  %>
          <tr>
            <td><%= labor_user.name %></td>

            <td><%= labor_user.ut %></td>

            <td><%= link_to 'Eliminar', labor_user, method: :delete, data: { confirm: 'Tem a certeza?' }, remote: true, class: 'delete_post btn btn-danger' %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>

</div>