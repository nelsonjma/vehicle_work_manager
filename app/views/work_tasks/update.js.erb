<% is_admin = just_for_admin_user %>
<% origin      = params[:origin] %>
<% vehicle_id  = params[:vehicle_id] %>
<% is_read_only = is_read_only?(@work_task.finished) %>


// close create/edit modal
$('#addEditModal').modal('hide');

var row_position = $('#table_row_position').val();

var selected_row = $('#work_task_tbody').find('> tr:eq(' + row_position + ')');

selected_row.find('> td:eq(0)').html("<%= @task_details.name %>");
selected_row.find('> td:eq(1)').html("<%= @work_task.description %>");
selected_row.find('> td:eq(2)').html("<%= get_work_task_labor(@work_task.id) %>");

selected_row.find('> td:eq(3)').html('<%= work_tasks_finished_cell(@work_task.finished, @work_task.finished_at, @work_task.id) %>');

selected_row.find('> td:eq(4)').html('<%= work_tasks_items_button(@work_task.id, @work_task.work_id, vehicle_id, origin, is_read_only) %>');

selected_row.find('> td:eq(6)').html('<%= work_tasks_delete_button(is_admin, is_read_only, @work_task.id, false) %>');

selected_row.find('> td:eq(7)').html('<%= work_tasks_labor_button(@work_task.id, is_read_only, false) %>');