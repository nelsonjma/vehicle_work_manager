// close create/edit modal
$('#addEditModal').modal('hide');

var row_position = $('#table_row_position').val();

var selected_row = $('#work_task_tbody').find('> tr:eq(' + row_position + ')');

selected_row.find('> td:eq(0)').html("<%= @task_details.name %>");
selected_row.find('> td:eq(1)').html("<%= @task_details.description %>");
selected_row.find('> td:eq(2)').html("<%= @work_task.ut %>");