<%= hidden_field_tag :table_row_position %>

<% is_admin = just_for_admin_user %>

<div class="container">

  <h4>
    Veiculo
    <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
    Obras
    <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
    <b>Tarefas</b>
  </h4>
  <br/>

  <div class="row">
    <%= go_back_link(params[:origin]) %>
    <%= link_to 'Adicionar Tarefa', new_work_task_path(params: { work_id: @work_id }), remote: true, class: 'btn btn-primary' %>
  </div>

  <div class="row">
    <table class="table table-condensed">
      <thead>
      <tr>
        <th>Nome</th>
        <th>Descrição</th>
        <th>Ut</th>

        <th>Estado da Tarefa</th>
        <th></th>
        <%= tag(:th, colspan: '2') if is_admin %>

      </tr>
      </thead>

      <tbody id="work_task_tbody">
      <% @work_tasks.each do |work_task| %>
          <tr>
            <td><%= work_task.name %></td>
            <td><%= work_task.description %></td>
            <td><%= work_task.ut %></td>

            <td><%= finished_cell_content(work_task.finished, work_task.finished_at, work_task.id) %></td>

            <%= show_items_button(work_task.id, @work_id, params[:vehicle_id], work_task.finished, params[:origin]) %>

            <%= show_edit_button(is_admin, work_task.id) %>

            <%= show_delete_button(is_admin, is_read_only?(work_task.finished), work_task.id) %>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>

</div>