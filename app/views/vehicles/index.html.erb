<h1>Veiculos</h1>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Tipo</th>
      <th>Descrição</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody id="vehicle_tbody">
    <% @vehicles.each do | vehicle | %>
      <tr>
        <td><%= link_to image_tag(vehicle['image']), works_path(params: { vehicle_id: vehicle['id'] }) %></td>

        <td><%= vehicle['name'] %></td>
        <td><%= vehicle['description'] %></td>

        <td><%= link_to 'Edit', edit_vehicle_path(vehicle['id']) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Tem a certeza?' }, remote: true, class: :delete_post %></td>
      </tr>
    <% end  %>
  </tbody>
</table>

<%= render partial: 'form', locals: { remote: true} %>