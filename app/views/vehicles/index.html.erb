<%= hidden_field_tag :table_row_position %>

<% you_are_admin = just_for_admin_user %>

<div class="container">

  <div class="row">
    <%= link_to 'Novo Veiculo', new_vehicle_path, remote: true, class: 'btn btn-primary' %>
  </div>

  <div class="row">
    <table class="table table-condensed">
      <thead>
      <tr>
        <th></th>
        <th>Tipo</th>
        <th>Descrição</th>

        <%= tag(:th, colspan: '2') if you_are_admin %>

      </tr>
      </thead>
      <tbody id="vehicle_tbody">
      <% @vehicles.each do | vehicle | %>
          <tr>
            <td><%= link_to image_tag(vehicle['image']), works_path(params: { vehicle_id: vehicle.id }) %></td>

            <td><%= vehicle.name %></td>
            <td><%= vehicle.description %></td>

            <%= content_tag(:td, (link_to 'Editar', edit_vehicle_path(vehicle), remote: true, class: 'update_post btn btn-warning')) if you_are_admin %>
            <%= content_tag(:td, (link_to 'Eliminar', vehicle, method: :delete, data: { confirm: 'Tem a certeza?' }, remote: true, class: 'delete_post btn btn-danger')) if you_are_admin %>
          </tr>
      <% end  %>
      </tbody>
    </table>
  </div>

</div>