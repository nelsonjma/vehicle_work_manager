<%= form_for(@stock_item, remote: true, :html => { class: 'form-horizontal', role: 'form' }) do |f| %>

    <div class="form-group">
        <%= f.label 'Codigo:', class: 'control-label col-sm-2' %>
        <div class="col-sm-4">
            <%= f.text_field :code, class: 'form-control' %>
        </div>
    </div>

    <div class="form-group">
        <%= f.label 'Nome:', class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
            <%= f.text_field :name, class: 'form-control' %>
        </div>
    </div>

    <div class="form-group">
      <%= f.label 'Categoria:', class: 'control-label col-sm-2' %>
      <div class="col-sm-4">
        <%= f.select(:item_category_id, item_categories_list, {:prompt => 'Selecionar'}, { :class => 'form-control'}) %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'Descrição:', class: 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= f.text_area :description, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'Quantidade:', class: 'control-label col-sm-2' %>
      <div class="col-sm-4">
        <%= f.text_field :qtd, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'Quantidade Minima:', class: 'control-label col-sm-2' %>
      <div class="col-sm-4">
        <%= f.text_field :qtd_min, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'Preço:', class: 'control-label col-sm-2' %>
      <div class="col-sm-4">
        <%= f.text_field :price, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit 'Guardar', class: 'btn btn-default add_edit_form_submit' %>
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        </div>
    </div>

<% end %>
