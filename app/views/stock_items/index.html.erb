<div class="container">

  <h4>Tarefas</h4>
  <br/>

  <div class="row">
      <%= link_to 'Novo Item', new_stock_item_path, remote: true, class: 'btn btn-primary' %>
    </div>

    <br/>

    <%= form_tag stock_items_path, :method => 'get', :id => 'stock_items_search' do %>

      <div class="input-group col-sm-4">
        <%= text_field_tag :search, params[:search], class: 'form-control' %>
        <span class="input-group-btn">
          <%= submit_tag 'Search', :name => nil, class: 'btn btn-default' %>
        </span>
      </div>

      <div id="stock_items" class="row"><%= render 'stock_items' %></div>
    <% end %>
</div>

<% content_for :head do %>
    <script type="text/javascript">
        <%= render :partial => 'index.js' %>
    </script>
<% end %>