<h1>Stock</h1>

<%= form_tag stock_items_path, :method => 'get', :id => 'stock_items_search' do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag 'Search', :name => nil %>
    </p>

    <div id="stock_items"><%= render 'stock_items' %></div>
<% end %>

<br>

<%= link_to 'New Item', new_stock_item_path, remote: true %>

<div id="container"></div>

<% content_for :head do %>
    <script type="text/javascript">
        <%= render :partial => 'index.js' %>
    </script>
<% end %>