$('#form_container').html("");

var row_position = $('#table_row_position').val();

var selected_row = $('#work_tbody').find('> tr:eq(' + row_position + ')');

selected_row.find('> td:eq(0)').html("<%= @work.description %>");
selected_row.find('> td:eq(1)').html("<%= @work.notes %>");
selected_row.find('> td:eq(2)').html("<%= @work.finished %>");