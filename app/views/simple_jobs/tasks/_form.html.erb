<%= form_for(@task, url: {action: operation}, remote: true, :html => { class: 'form-horizontal', role: 'form' }) do |f| %>

    <%= f.hidden_field :simple_work_id %>

    <div class="form-group">
      <%= f.label 'Nome:', class: 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'DescriÃ§ao:', class: 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= f.text_area :description, class: 'form-control' %>
      </div>
    </div>

    <% unless is_new_task %>
        <div class="form-group">
          <%= f.label 'Tarefa Terminado?:', class: 'control-label col-sm-2' %>
          <div class="col-sm-2">
            <%= f.check_box :finished, class: 'form-control' %>
          </div>
        </div>
    <% end %>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Guardar', class: 'btn btn-default add_edit_form_submit' %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
      </div>
    </div>

<% end %>