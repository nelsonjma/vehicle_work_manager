<% you_are_admin = just_for_admin_user %>

var rowContent = '<tr>' +
        '<td><%= @task.name  %></td>' +
        '<td><%= @task.description %></td>' +

        '<td><%= link_to 'Editar', edit_task_path(@task), remote: true, class: 'update_post btn btn-warning' %></td>' +

        '<%= content_tag(:td, (link_to 'Eliminar', @task, method: :delete, data: { confirm: 'Tem a certeza?' }, remote: true, class: 'delete_post btn btn-danger')) if you_are_admin %>' +
                
        '</tr>';

insertRowAfter('tasks_tbody', rowContent);

// close create/edit modal
$('#addEditModal').modal('hide');