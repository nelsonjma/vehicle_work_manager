<div class="container">

  <div class="row">
    <%= link_to 'Nova Tarefa', new_task_path, remote: true, class: 'btn btn-primary' %>
  </div>

  <div class="row">
    <table class="table">
      <thead>
      <tr>
        <th>nome</th>
        <th>descrição</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody id="tasks_tbody">
      <% @tasks.each do |task| %>
          <tr>
            <td><%= task.name %></td>
            <td><%= task.description %></td>

            <td><%= link_to 'Edit', edit_task_path(task), remote: true, class: :update_post %></td>
            <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Tem a certeza?' }, remote: true, class: :delete_post %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <%= hidden_field_tag :table_row_position %>
  </div>

</div>

<div id="form_container"></div>